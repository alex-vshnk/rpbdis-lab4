@model IEnumerable<WebApplication.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Курсы</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                Название
            </th>
            <th>
                Программа обучения
            </th>
            <th>
                Описание
            </th>
            <th>
                Интенсивность занятий
            </th>
            <th>
                Размер группы
            </th>
            <th>
                Количество свободных мест
            </th>
            <th>
                Количество часов
            </th>
            <th>
                Стоимость
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intensity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacanciesNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
        </tr>
}
    </tbody>
</table>
